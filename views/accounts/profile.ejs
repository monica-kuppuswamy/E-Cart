<%- layout('layout') -%>
<div class="container">
  <br/>
  <br/>
  <br/>
  <br/>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img class="rounded-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">
      <br/>
      <br/>
      <p>Name: <%= user.profile.name %></p>
      <p>Email: <%= user.email %></p>

      <% if(user.address == "" || typeof user.address === 'undefined') { %>
        <p>Address: <span style="color:red">Update your address.</span></p>
      <% } else { %>
        <p>Address: <%= user.address%></p>
      <% } %>
      <br/>
      <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>
  </div>
  <hr/>
</div>
