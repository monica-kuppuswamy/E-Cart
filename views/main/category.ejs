<% layout('layout') -%>

<br/>
<br/>
<br/>
<br/>
<div class="container">
  <div class="row">

    <% for(var i = 0; i < products.length; i++) { %>

      <div class="col-md-4 border">
        <br/>
        <div class="thumbnail">
          <a href="/product/<%= products[i]._id %>">
            <img height=150 width=150 class="img-responsive img-center" src ="<%= products[i].image %>" >
            <br/>
            <br/>
            <div class="caption">
              <h4><%= products[i].name %></h4>
              <p>Category: <%= products[i].category.name %></p>
              <p>Price : <%= products[i].price %> $</p>
            </div>
          </a>
        </div>
      </div>

    <% } %>

  </div>
</div>
